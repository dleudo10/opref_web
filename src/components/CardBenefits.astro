---
const { icon, title, description } = Astro.props;
---

<div class="shadow-lg p-5 md:max-w-[300px]">
    <div class="mb-2 flex flex-col items-center">
        <div class="w-12 h-12 rounded-full bg-blue-100 flex justify-center items-center">
            <i class=`${icon} text-2xl text-blue-900`></i>
        </div>
        <h3 class="font-medium text-blue-900">{title}</h3>
    </div>
    <div class="text-center">
        <p class="text-sm text-gray-600 font-medium">{description}</p>
    </div>
</div>
